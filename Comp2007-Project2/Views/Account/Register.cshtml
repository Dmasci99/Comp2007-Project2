@model Comp2007_Project2.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="interior-page forms-page" id="register-page">
    <div class="container">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
        {
            <h2>Register</h2>
            @Html.AntiForgeryToken()
            <div runat="server" id="ErrorContainer" class="error-container" visible="false">
                @Html.ValidationSummary(true, "", new { @class = "error" })
            </div>
            <div class="cancel">
                <a href="/Home"><i class="fa fa-times"></i></a>
            </div>
            <div class="input-container">
                @Html.LabelFor(m => m.Email, new { @class = "" })
                @Html.TextBoxFor(m => m.Email, new { @class = "" })
            </div>
            <div class="input-container">
                @Html.LabelFor(m => m.Password, new { @class = "" })
                @Html.PasswordFor(m => m.Password, new { @class = "" })
            </div>
            <div class="input-container">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "" })
            </div>
            <div class="submit">
                <input type="submit" value="Register" />
            </div>
            <div class="login">
                @Html.ActionLink("Already Registered?", "Login")
            </div>
        }

    </div>
</div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
