@using Comp2007_Project2.Models
@model LoginViewModel
@{
    ViewBag.Title = "Login";
}

<div class="interior-page forms-page" id="login-page">
    <div class="container">        
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
        {
            <h2>Login</h2>
            @Html.AntiForgeryToken()
            <div runat="server" id="ErrorContainer" class="error-container" visible="false">
                @Html.ValidationSummary(true, "", new { @class = "error" })
            </div>
            <div class="cancel">
                <a href="/Home"><i class="fa fa-times"></i></a>
            </div>
            <div class="input-container">
                @Html.LabelFor(m => m.Email, new { @class = "" })
                @Html.TextBoxFor(m => m.Email, new { @class = "" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "" })
            </div>
            <div class="input-container">
                @Html.LabelFor(m => m.Password, new { @class = "" })
                @Html.PasswordFor(m => m.Password, new { @class = "" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "" })
            </div>
            <div class="checkbox">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>
            <div class="submit button">
                <input type="submit" value="Login" />
            </div>
            <div class="register">
                @Html.ActionLink("Register as a new user", "Register")
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}