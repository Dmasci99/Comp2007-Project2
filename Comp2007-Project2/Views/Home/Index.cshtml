    *
    * This is the Home Page for our Application. It includes a rotator that
    * shows multiple images (of various games) and provides a button on the
    * first slide to take the user to the Store page.
    *
    * IMAGES TAKEN FROM http://eskipaper.com/games/
    */
*@


<div id="home-page">

    <div class="top-banner">
        <div class="rotator">
            <div class="slides">
                <div class="slide active" id="slide1" style="background-image: url(/Assets/images/slide1.jpg);">
                    <div class="container">
                        <div class="heading">
                            <h2>Welcome!</h2>
                        </div><!-- heading -->
                        <div class="text">
                            <p>Welcome to EZ Games!
                            <br />Dedicated to bringing you the latest and greatest games without you ever having to leave your computer!
                            <br />Check out our "About" page for more info, or head to the store to buy your next adventure!</p>
                        </div><!-- text -->
                        <div class="button">
                            @Html.ActionLink("Take a Look", "Index", "Store")
                        </div>
                    </div><!-- container -->
                </div><!-- slide1 -->
                <div class="slide" id="slide2" style="background-image: url(/Assets/images/slide2.jpg);">
                    <div class="container">
                        <div class="heading">
                            <h2>Store</h2>
                        </div><!-- heading -->
                        <div class="text">
                            <p>Check out our selection of games!</p>
                        </div><!-- text -->
                        <div class="button">
                            @Html.ActionLink("Take a Look", "Index", "Store")
                        </div>
                    </div><!-- container -->
                </div><!-- slide2 -->
                <div class="slide" id="slide3" style="background-image: url(/Assets/images/slide3.jpg);">
                    <div class="container">
                        <div class="heading">
                            <h2>About EZ Games</h2>
                        </div><!-- heading -->
                        <div class="text">
                            <p>Who are we? What do we do? Why buy from us?</p>
                        </div><!-- text -->
                        <div class="button">
                            @Html.ActionLink("Find out!", "About", "Home")
                        </div>
                    </div><!-- container -->
                </div><!-- slide3 -->
                <div class="slide" id="slide4" style="background-image: url(/Assets/images/slide4.jpg);">
                    <div class="container">
                        <div class="heading">
                            <h2>Contact</h2>
                        </div><!-- heading -->
                        <div class="text">
                            <p>Got a question or concern? No problem!</p>
                        </div><!-- text -->
                        <div class="button">
                            @Html.ActionLink("Contact Us", "Contact", "Home")
                        </div>
                    </div><!-- container -->
                </div><!-- slide4 -->
                <div class="rotator-controls">
                </div><!-- rotator-controls -->
                <div class="rotator-arrows">
                    <div class="container">
                        <div class="prev"><i class="fa fa-chevron-left"></i></div><!-- prev -->
                        <div class="next"><i class="fa fa-chevron-right"></i></div><!-- next -->
                    </div><!-- container -->
                </div><!-- rotator-arrows -->
            </div><!-- slides -->
        </div><!-- rotator -->
    </div><!-- top-banner -->

</div><!-- #home-page -->
