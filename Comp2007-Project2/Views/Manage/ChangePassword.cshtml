@model Comp2007_Project2.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

<div class="interior-page forms-page" id="password-page">
    <div class="container">
        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
        {
            <h2>Change Password</h2>
            @Html.AntiForgeryToken()
            <div runat="server" id="ErrorContainer" class="error-container" visible="false">
                @Html.ValidationSummary("", new { @class = "" })
            </div>
            <div class="cancel">
                <a href="/Home"><i class="fa fa-times"></i></a>
            </div>

            <div class="input-container">
                @Html.LabelFor(m => m.OldPassword, new { @class = "" })
                @Html.PasswordFor(m => m.OldPassword, new { @class = "" })
            </div>
            <div class="input-container">
                @Html.LabelFor(m => m.NewPassword, new { @class = "" })
                @Html.PasswordFor(m => m.NewPassword, new { @class = "" })
            </div>            
            <div class="input-container">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "" })
            </div>
            <div class="submit button">
                <input type="submit" value="Update" />
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}