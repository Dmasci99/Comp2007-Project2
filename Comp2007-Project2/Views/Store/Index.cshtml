@using Comp2007_Project2.Models
@model IEnumerable<Game>

@{
    ViewBag.Title = "Store";
    List<Platform> platforms = new StoreEntities().Platforms.ToList();
}
@helper printItems(Platform Platform)
{
    <div class="row @Platform.Name.ToLower()">
        <h2>@(Platform.Name)s</h2>
        <div class="container">
            @foreach (var game in Model.Where(p => p.Platform.Name.Contains(Platform.Name)))
            {
                <div class="game @(Platform.Name)s" id="game@(game.GameId)">
                    <a href="/Store/Details/@game.GameId">
                        <div class="image">
                            @if (game.Label.Name != "")
                            {
                                <div class="label">@game.Label.Name</div>
                            }
                            <i class="fa fa-share-square-o"></i>
                            <img src="@game.ImageIconUrl" alt="@game.Name" title="@game.Name" />
                        </div>
                        <div class="name">@game.Name <span class="price">($@(game.Price))</span></div>
                        <div class="desc">@game.Description</div>
                    </a>
                </div>
            }
        </div>
    </div>
}
<div class="interior-page store-page" id="store-page">
    <div class="games">
        <!-- Manually determine order of games -->
        @printItems(platforms.Single(p => p.Name == "Beverage"))
        @printItems(platforms.Single(p => p.Name == "Appetizer"))
        @printItems(platforms.Single(p => p.Name == "Main Course"))
        @printItems(platforms.Single(p => p.Name == "Dessert"))

        <!-- DB determines order of games -->
